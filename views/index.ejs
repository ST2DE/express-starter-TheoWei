<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ToDoList</title>
</head>
<body>
    <h2>To do List</h2>


    <form action="/tasks/taskList" method="post">
        <input type="text" name="taskName" value="" placeholder="輸入項目">
        <input type="submit" value="Submit">
    </form>
    
    <ul>
        <% tasks.forEach(function(task) { %>
            <li><a href='/task/<%= task.id %>'><%= task.id %>: <%= task.title %></a></li>
        <% }); %> 
    </ul> 
 
  
</body>
</html>
